void setup() { // Arduino IDE'de sadece 1 kere çalışmasını istediğimiz kodları void setup() kısmının içine yazarız.
pinMode(13, OUTPUT); // pinMode komutu ile 13. pin çıkış pini olarak belirlendi. İleriki bölümlerimizde çıkış ve girişleri inceleyeceğiz. Merak etme!
}


void loop() { // Arduino IDE'de sürekli olmasını istediklerimiz void loop() içine yazarız.
digitalWrite(13, HIGH);   // digitalWrite komutu bize istediğimiz pinin gücünü kontol etmemize yarar. Biz burada yüksek güç verdik ayni ledi açtık.
delay(1000);              // 1 saniye bekle
digitalWrite(13, LOW);    // 13. pinin gücünü LOW şeklinde kesebiliriz
delay(1000);              // 1 saniye bekle
}
